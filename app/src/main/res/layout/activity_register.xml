<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_register_bt"
    tools:context=".view.activity.RegisterActivity">
    <TextView
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:gravity="center"
        android:text="注册"
        android:layout_marginBottom="300dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </TextView>
    <EditText
        android:id="@+id/et_regis_ni"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:hint="请输入昵称"
        android:textColorHint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:id="@+id/et_regis_email"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:textColorHint="#FFFFFF"
        android:hint="请输入邮箱账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:id="@+id/et_regis_pwd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:hint="请设置密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_regis_yzm"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:hint="请输入验证码"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:id="@+id/bt_regis_yzm"
            android:background="#FFFFFF"
            android:text="获取验证码"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_you"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:text="已有账号 立即登录"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_regis"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="注册"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
</LinearLayout>